<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-45"
                android:endColor="@color/graylight_double"
                android:startColor="@color/graylight_double"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#002094f1"
                android:endColor="#00004F81"
                android:angle="-45" />
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
</selector>