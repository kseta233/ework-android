<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/eduplex_yellow_main" />
            <stroke
                android:width="2dp"
                android:color="@color/eduplex_yellow_main" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/gray" />
            <corners
                android:radius="1dp" />
        </shape>
    </item>
</selector>