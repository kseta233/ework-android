<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/padding_big"
        android:paddingBottom="@dimen/padding_big"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivItemDaftarAngsuran"
            android:layout_width="@dimen/value_60"
            android:layout_height="@dimen/value_60"
            android:layout_marginRight="@dimen/margin_normal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/ivItemDaftarAngsuran"
            android:layout_toEndOf="@+id/ivItemDaftarAngsuran"
            android:layout_alignBottom="@+id/ivItemDaftarAngsuran"
            android:layout_alignParentTop="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTextNoAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_agreement"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text"
                    android:layout_marginBottom="@dimen/margin_small"/>
                <TextView
                    android:id="@+id/tvItemDaftarAngsuranNoAgreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_no_agreement"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/text"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/tvTextNoAgreement"
                    android:layout_toEndOf="@+id/tvTextNoAgreement" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tvItemDaftarAngsuranJenisAngsuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_produk_kpr"
                android:textSize="@dimen/text_normal"
                android:textColor="@color/text_default"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>