<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/transparent"
    android:paddingTop="@dimen/padding_normal"
    android:paddingLeft="@dimen/padding_normal"
    android:paddingRight="@dimen/padding_normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/llKeyboard"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard1"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard2"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:textColor="@color/white"
                    android:text="2"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard3"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard4"
                    android:layout_width="@dimen/value_60"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/value_60"
                    android:text="4"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard5"
                    android:layout_width="@dimen/value_60"
                    android:textColor="@color/white"
                    android:layout_height="@dimen/value_60"
                    android:text="5"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard6"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="6"
                    android:textSize="@dimen/text_xlarge"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard7"
                    android:textColor="@color/white"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="7"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard8"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="8"
                    android:textSize="@dimen/text_xlarge"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard9"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="9"
                    android:textSize="@dimen/text_xlarge"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ivKeyboardNext"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:padding="@dimen/padding_normal"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvKeyboard0"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:text="0"
                    android:textSize="@dimen/text_xlarge"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="0.3"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/ivKeyboardDelete"
                    android:layout_width="@dimen/value_60"
                    android:layout_height="@dimen/value_60"
                    android:src="@mipmap/ic_delete_white"
                    android:gravity="center"
                    android:background="@drawable/bg_item_pressed_circle"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>