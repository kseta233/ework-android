<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin"
            android:background="@color/page_background"></RelativeLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/value_125dp"
                android:background="@color/white"
                android:paddingTop="@dimen/padding"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding">
                <ImageView
                    android:id="@+id/ivItemCategory"
                    android:layout_width="@dimen/value_80"
                    android:layout_height="@dimen/value_80"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_centerVertical="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivItemCategory"
                    android:layout_toLeftOf="@+id/imageView9">
                    <TextView
                        android:id="@+id/tvItemCategoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/pendidikan"
                        android:textSize="@dimen/text_normal"
                        android:textStyle="bold"
                        android:textColor="@color/text_dark"
                        android:layout_marginBottom="@dimen/margin_small"/>
                    <TextView
                        android:id="@+id/tvItemCategorySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_lorem_ipsum"
                        android:textColor="@color/text_default"
                        android:textSize="@dimen/text"
                        android:layout_marginBottom="@dimen/margin_small"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_chevron_black"
                    android:id="@+id/imageView9"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>