<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    tools:context=".activities.TebusKodeReferalActivity">

    <include layout="@layout/item_toolbar"
        android:id="@+id/include19" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/margin"
        android:layout_above="@+id/relativeLayout"
        android:layout_below="@+id/include19">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTebusKodeVoucherReferal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:theme="@style/MyTextInputLayoutStyle">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/kode_referal"
                    android:maxLength="@integer/kode_referal_max_length"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_large"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_border_rectangle_yellow_fill_click">

        <TextView
            android:id="@+id/tvTebusKodeTebusKode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/tebus_kode_uc"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_big" />
    </RelativeLayout>

</RelativeLayout>
